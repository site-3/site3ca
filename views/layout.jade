doctype 5
html
  head
    title
      - if (locals.page_title != null)
        = [page_title, title].join(' | ')
      - else
        = title
    meta(name="viewport", content="initial-scale=1.0, maximum-scale=1.0")
    link(rel="alternate", type="application/rss+xml", title="Propane and Electrons", href="/feed")
    link(rel="icon", type="image/png", href="/favicon.ico")
    link(rel='stylesheet', href='/css/screen.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js")
    script(src="/components/cufon/cufon.js")
    script(src="/neutra.font.js")
    script(type="text/javascript")
      Cufon.replace('h1,h2,h3,h4,h5,h6,.header a', {hover: true});
    block head
  body
    .background-mask
    .header
      .container
        .brand
          a(href='/') Site3 coLaboratory
          span.tagline
            span.main Art and technology workspace
        ul.nav
          li: a(href="/about") About
          li: a(href="/membership") Membership
          li: a(href="/classes") Events &amp; Classes
          li: a(href="/tools") Tools
          li: a(href="/projects") Projects

    #main.container
      .content
        block content

    .footer
      .container
        table.hours
          tr
            td Thursday
            td 7pm &ndash; late
          tr
            td Monday
            td 7pm &ndash; 10pm
          tr
            td Saturday
            td noon &ndash; 6pm
          tr
            td Sunday
            td noon &ndash; 6pm

  script(type="text/javascript")
    Cufon.now();
